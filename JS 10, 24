<body>
    <script>
        /*
        var name;
        if (prompt("입력") == "1") { //prompt = input
            name = "<h1>못생긴 한결이</h1>";
        } else {
            name = "<h2>잘생긴 한결이</h2>";
        }
        document.write(name);   //write = 출력, alert = 알림창(document 필요 X)
        */

        /*
        var a = true;
        var b = false;
        var c = 10 > 5; //true
        var d = Boolean(null);  //false

        document.write(a, "<br>")   //<br> = 줄 바꿈
