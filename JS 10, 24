        document.write(d, "<br>")
        */

        var c = prompt("연산자 입력(1 : 덧셈, 2 : 뺄셈, 3 : 곱셈, 4 : 나누기, 5 : 나머지)")
        var a = prompt("첫번째 값 입력.");
        var b = prompt("두번째 값 입력.");

        if (c == "1") {
            document.write(a, "+", b, "=", Number(a) + Number(b))
        } else if (c == "2") {
            document.write(a, "-", b, "=", Number(a) - Number(b))
        } else if (c == "3") {
            document.write(a, "*", b, "=", Number(a) * Number(b))
        } else if (c == "4") {
            document.write(a, "/", b, "=", Number(a) / Number(b))
        } else if (c == "5") {
            document.write(a, "%", b, "=", Number(a) % Number(b))
        }

    </script>
</body>

